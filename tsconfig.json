{
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "./lib/types",
    "baseUrl": "src",
    "allowJs": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "lib": [
      "webworker",
      "es2016",
    ],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
  ]
}